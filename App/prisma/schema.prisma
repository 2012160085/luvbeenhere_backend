// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  phone     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Date {
  id        Int      @id @default(autoincrement())
  name      String
  yyyymmdd  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visits    Visit[]
}

model Visit {
  id        Int      @id @default(autoincrement())
  name      String
  date      Date     @relation(fields: [dateId], references: [id])
  place     Place    @relation(fields: [placeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dateId    Int
  placeId   Int
  photos    Photo[]
  rating    Rating?
}

model Place {
  id        Int      @id @default(autoincrement())
  name      String
  posX      Float
  posY      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visits    Visit[]
}

model Photo {
  id        Int      @id @default(autoincrement())
  posX      Float
  posY      Float
  file      String
  datetime  DateTime
  visit     Visit    @relation(fields: [visitId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visitId   Int
}

model Rating {
  id        Int      @id @default(autoincrement())
  rating    Int
  visit     Visit    @relation(fields: [visitId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visitId   Int
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
